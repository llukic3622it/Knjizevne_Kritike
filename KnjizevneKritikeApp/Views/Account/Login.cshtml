@{
    ViewData["Title"] = "Login";
}

<h2>Prijava</h2>

<form method="post" asp-action="Login" novalidate>
    <div class="mb-3">
        <label for="korisnickoIme" class="form-label">Korisničko ime</label>
        <input name="korisnickoIme" class="form-control" />
    </div>
    <div class="mb-3">
        <label for="lozinka" class="form-label">Lozinka</label>
        <input name="lozinka" type="password" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary w-100">Prijavi se</button>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="text-danger mt-2">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <div>@error.ErrorMessage</div>
            }
        </div>
    }
</form>
